{
  "name": "tabnews_clone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igor-cotrim/tabnews_clone.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/igor-cotrim/tabnews_clone/issues"
  },
  "homepage": "https://github.com/igor-cotrim/tabnews_clone#readme",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "14.2.33",
    "node-pg-migrate": "7.6.1",
    "pg": "8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "concurrently": "9.2.1",
    "eslint": "8.57.0",
    "eslint-config-next": "^16.0.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.2.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.6.2"
  }
}
